    ViewBag.Title = "System Admin Page";
}

<div class="jumbotron">
    <h2>System Admin Panel</h2>
    <p class="lead">Welcome Administrator</p>
</div>


<div class="row">
    <div class="col-md-4">
        <h2>User Admin</h2>
        <p>
            Users and Groups Administration
        </p>
        <p>
            @Html.ActionLink("User", "Index", "users", new { area = "core" },new { @class = "btn btn-default" })
