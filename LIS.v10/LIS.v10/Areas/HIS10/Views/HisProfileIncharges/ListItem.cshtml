@model IEnumerable<LIS.v10.Areas.HIS10.Models.HisProfile>

@{
    ViewBag.Title = "ListItem";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int inId = (int)ViewBag.Incharge;
}

<h2>Select Item to add</h2>

<table class="table">

@foreach (var item in Model) {
    <tr>
        <td>
            <span style="font: bold 14px calibre, verdana;">
                @item.Name
            </span>
            <span style="font-size:smaller">
                <br />@item.Remarks
            </span>
        </td>
        <td>
            @Html.ActionLink("Select", "AddToInCharge", new { pId= item.Id, iId = inId }) 
        </td>
    </tr>
}

</table>

@Html.ActionLink("Cancel","index")