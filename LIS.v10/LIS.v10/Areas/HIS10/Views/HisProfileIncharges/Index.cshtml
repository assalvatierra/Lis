@model IEnumerable<LIS.v10.Areas.HIS10.Models.HisProfileIncharge>

@{
    ViewBag.Title = "In-Charge";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int InChargeId = (int)ViewBag.CurrentIncharge;
}

<h2>InCharge / Theraphist </h2>

<p>
    @Html.ActionLink("Add Unit/Item", "ListItem", new { id = InChargeId }) | @Html.ActionLink("Add Group", "ListGroup", new { id = InChargeId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HisProfile.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HisIncharge.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HisProfile.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HisIncharge.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
