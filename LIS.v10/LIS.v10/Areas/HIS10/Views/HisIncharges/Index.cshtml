@model IEnumerable<LIS.v10.Areas.HIS10.Models.HisIncharge>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>In-Charge</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td style="width:10%;">
                <img src="~/Content/placeholder-image.jpg" height="100" />
            </td>
            <td>
                <span style="font: bold 14px calibre, verdana;">
                    @item.Name
                </span>
                <span style="font-size:smaller">
                    <br />@item.Remarks
                </span>
                <p>
                    @Html.ActionLink("Details", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Create Login", "CreateLogin", new { id = item.Id })
                </p>
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)
</p>
