@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>@ViewBag.AppName</h1>
    <p class="lead">@ViewBag.AppDescription</p>
    <p>@ViewBag.AppVersion</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="col-md-4">
            <h2>About</h2>
            <p>
                About this web application
            </p>
            <p>
                @Html.ActionLink("About", "about", "", new { area = "" }, new { @class = "btn btn-default" })
            </p>
        </div>
        <div class="col-md-4">
            <h2>Contact</h2>
            <p>
                Contact Us
            </p>
            <p>
                @Html.ActionLink("Contact", "contact", "", new { area = "" }, new { @class = "btn btn-default" })
            </p>
        </div>
        <div class="col-md-4">
            <h2>Login</h2>
            <p>
                Login
            </p>
            <p>
                @Html.ActionLink("Login", "login", "Account", new { area = "" }, new { @class = "btn btn-default" })
            </p>
        </div>
    }
    else
    {
        if (ViewBag.PageType == "ADMIN")
        {
            <div class="col-md-4">
                <h2>Admin</h2>
                <p>
                    System Administration by Root Account Only
                </p>
                <p>
                    @Html.ActionLink("Admin Panel", "index", "SystemAdmin", new { area = "Core" }, new { @class = "btn btn-default" })
                </p>
            </div>
        }

        if (ViewBag.PageType == "MEDTECH" || ViewBag.PageType == "ADMIN")
        {
            <div class="col-md-4">
                <h2>Profiles</h2>
                <p>Patient Profiles</p>
                <p>
                    @Html.ActionLink("Profiles", "index", "HisProfiles", new { area = "HIS10" }, new { @class = "btn btn-default" })
                </p>
            </div>
        }

        if (ViewBag.PageType == "DOCTOR")
        {
            <div class="col-md-4">
                <h2>Doctor Profile</h2>
                <p>Define Doctor information and clinic schedules</p>
                <p>
                    @Html.ActionLink("Profile", "profile", "HisPhysicians", new { area = "HIS10" }, new { @class = "btn btn-default" })
                </p>
            </div>
        }

        if (ViewBag.PageType == "PATIENT")
        {
            <div class="col-md-4">
                <h2>Patient Profile</h2>
                <p>Define patient information and clinic schedules</p>
                <p>
                    @Html.ActionLink("Profiles", "index", "HisProfiles", new { area = "HIS10" }, new { @class = "btn btn-default" })
                </p>
            </div>
        }

        <div class="col-md-4">
            <h2>Laboratory</h2>
            <p>Laboratory Status</p>
            <p>
                @Html.ActionLink("Orders", "index", "HisOrders", new { area = "HIS10" }, new { @class = "btn btn-default" })
            </p>
        </div>

        if (ViewBag.PageType == "MEDTECH" || ViewBag.PageType == "ADMIN")
        {
            <div class="col-md-4">
                <h2>Reports</h2>
                <p>Reporting tools for the system. to be develop as per needed</p>
                <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
            </div>
        }

    }



</div>